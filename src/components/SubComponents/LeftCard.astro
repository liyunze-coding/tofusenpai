---
// TODO: Image optimization
interface Props {
	src: string;
	alt: string;
	eager?: boolean | null;
	heading: string;
	subheading: string;
	x: string;
	y: string;
	z: string;
	rotation: string;
	href?: string | null;
}

const { src, alt, eager, heading, subheading, x, y, z, rotation, href } =
	Astro.props;
---

<a href={href} class="project absolute" data-z-index={z}>
	<div class="flex justify-center items-center w-[600px] lg:w-full gap-10">
		<div class="project-detail project-img left w-[700px]">
			<img
				src={src}
				alt={alt}
				width="700"
				class="rounded-lg fadeIn scaleIn"
				loading={eager ? "eager" : "lazy"}
			/>
		</div>
		<div class="project-detail text-box pl-8 w-[400px]">
			<div
				class="w-[90%] px-2 py-2 rounded-md flex flex-col justify-center items-center"
			>
				<div class="w-fit heading text-5xl mb-4 text-nowrap">
					{heading}
				</div>
				<div class="text-xl fit-me text-nowrap w-fit">{subheading}</div>
			</div>
		</div>
	</div>
</a>

<style define:vars={{ x, y, z, rotation }}>
	.project {
		transform: translateX(calc(-50% + var(--x))) translateY(var(--y));

		left: 50%;
	}

	.left {
		transform: rotate(var(--rotation));
	}
</style>
