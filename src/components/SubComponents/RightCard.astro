---
interface Props {
	src: any;
	alt: string;
	eager?: boolean | null;
	heading: string;
	subheading: string;
	x: string;
	y: string;
	z: string;
	rotation: string;
	href?: string | null;
}

import { Image } from "astro:assets";

const { src, alt, eager, heading, subheading, x, y, z, rotation, href } =
	Astro.props;
---

<a href={href} class="project absolute" data-z-index={z}>
	<div class="flex justify-center items-center w-[600px] lg:w-[900px]">
		<div class="project-detail text-box pl-8 w-[400px]">
			<div
				class="w-fit bg-secondary bg-opacity-50 px-2 py-2 rounded-md text-3xl"
			>
				{heading}
				<br /><br />
				{subheading}
			</div>
		</div>
		<div class="project-detail project-img right w-[40%] lg:w-[500px]">
			<Image
				src={src}
				alt={alt}
				width="500"
				class="rounded-lg fadeIn scaleIn"
				loading={eager ? "eager" : "lazy"}
			/>
		</div>
	</div>
</a>

<style define:vars={{ x, y, z, rotation }}>
	.project {
		transform: translateX(calc(-50% + var(--x))) translateY(var(--y));

		left: 50%;
	}

	.right {
		transform: rotate(var(--rotation));
	}
</style>
