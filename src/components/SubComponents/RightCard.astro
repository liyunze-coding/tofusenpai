---
interface Props {
	src: any;
	alt: string;
	eager?: boolean | null;
	heading: string;
	subheading: string;
	x: string;
	y: string;
	z: string;
	rotation: string;
	href?: string | null;
}

import { Image } from "astro:assets";

const { src, alt, eager, heading, subheading, x, y, z, rotation, href } =
	Astro.props;
---

<a href={href} class="project relative w-full block">
	<div class="flex justify-center items-center absolute">
		<div class="project-detail text-box w-1/2">
			{heading}
			<br /><br />
			{subheading}
		</div>
		<div class="project-detail project-img right">
			<Image
				src={src}
				alt={alt}
				width="500"
				class="rounded-lg"
				loading={eager ? "eager" : "lazy"}
			/>
		</div>
	</div>
</a>

<style define:vars={{ x, y, z, rotation }}>
	.project > div {
		transform: translateX(var(--x)) translateY(var(--y))
			translateZ(var(--z));
	}

	.right {
		transform: rotate(var(--rotation));
	}
</style>
