---
import { Image } from "astro:assets";

// subcomponents
import LeftCard from "./SubComponents/LeftCard.astro";
import RightCard from "./SubComponents/RightCard.astro";

// mobile components
import { ContainerScroll } from "./ui/container-scroll-animation";
---

<div class="flex flex-col lg:hidden overflow-hidden">
	<ContainerScroll
		heading="Give Me Love"
		subheading="(SHORT FILM)"
		client:load
	>
		<Image
			src="/film-images/small/give-me-love.webp"
			alt="GIVE ME LOVE"
			height={465}
			width={648}
			class="mx-auto rounded-2xl object-cover h-full object-left-top"
			draggable={false}
		/>
	</ContainerScroll>
	<ContainerScroll
		heading="DAYDREAMERS"
		subheading="(OFF-BROADWAY SHOW)"
		client:load
	>
		<Image
			src="/film-images/small/daydreamers.webp"
			alt="Daydreamers"
			height={465}
			width={648}
			class="mx-auto rounded-2xl object-cover h-full object-left-top"
			draggable={false}
		/>
	</ContainerScroll>
	<ContainerScroll
		heading="GRIMES COACHELLA 2024"
		subheading="(MULTIMEDIA LIVE SHOW)"
		client:load
	>
		<Image
			src="/film-images/small/grimes.webp"
			alt="Grimes Coachella 2024"
			height={465}
			width={648}
			class="mx-auto rounded-2xl object-cover h-full object-left-top"
			draggable={false}
		/>
	</ContainerScroll>

	<ContainerScroll
		heading="A SHORT FILM ABOUT RAINBOWS"
		subheading="(ANIMATION)"
		client:load
	>
		<Image
			src="/film-images/small/rainbows.webp"
			alt="a short film about rainbows"
			height={465}
			width={648}
			class="mx-auto rounded-2xl object-cover h-full object-left-top"
			draggable={false}
		/>
	</ContainerScroll>

	<ContainerScroll heading="SHARK BAIT" subheading="(SHORT FILM)" client:load>
		<Image
			src="/film-images/small/sharkbait.webp"
			alt="Shark Bait"
			height={465}
			width={648}
			class="mx-auto rounded-2xl object-cover h-full object-left-top"
			draggable={false}
		/>
	</ContainerScroll>
</div>
